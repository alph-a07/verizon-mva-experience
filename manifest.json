{
    "manifest_version": 3,
    "name": "Custom User Agent & Web Params",
    "version": "1.0",
    "description": "Set custom user agents and inject web parameters.",
    "permissions": ["declarativeNetRequest", "activeTab", "storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
